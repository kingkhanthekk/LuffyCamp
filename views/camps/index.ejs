<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<a class="btn btn-success mb-2" href="/campgrounds/new">Add a campground</a>

<% for(let camp of camps) { %>
<div class="card">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= camp.image %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= camp.title %></h4>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-secondary"><%= camp.location %></small>
        </p>
        <a href="/campgrounds/<%= camp._id %>/details" class="btn btn-primary"
          >Details</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

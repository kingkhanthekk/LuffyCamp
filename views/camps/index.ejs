<% layout('layouts/boilerplate') %>
<link
  href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css"
  rel="stylesheet"
/>
<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>

<div id="map" style="height: 400px; width: 100%"></div>
<h1 class="mb-3">All Campgrounds</h1>
<!-- <a class="btn btn-success mb-2" href="/campgrounds/new">Add a campground</a> -->

<% for(let camp of camps) { %>
<div class="card">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.images.length) { %>
      <img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
      <% } else { %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/dxql5gfer/image/upload/c_fill,h_350,w_500/v1/LuffyCamp/bfwileinjm4fmnrqx348"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= camp.title %></h4>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-secondary"><%= camp.location %></small>
        </p>
        <a href="/campgrounds/<%= camp._id %>/details" class="btn btn-primary"
          >Details</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const camps = {features: <%- JSON.stringify(camps) %>};
</script>

<script src="/js/mapCluster.js"></script>
